# 1. Создать двух пользователей
from django.contrib.auth.models import User
user1 = User.objects.create_user('user1')
user2 = User.objects.create_user('user2')

# 2. Создать два объекта модели Author, связанные с пользователями
from news.models import Author
author1 = Author.objects.create(user=user1)
author2 = Author.objects.create(user=user2)

# 3. Добавить 4 категории в модель Category
from news.models import Category
cat1 = Category.objects.create(name_category='Политика')
cat2 = Category.objects.create(name_category='Технологии')
cat3 = Category.objects.create(name_category='Спорт')
cat4 = Category.objects.create(name_category='Культура')

# 4. Добавить 2 статьи и 1 новость
from news.models import Post
post1 = Post.objects.create(
    positions='СТ',
    title='Первая статья',
    text='Текст первой статьи...',
    author=author1
)
post2 = Post.objects.create(
    positions='СТ',
    title='Вторая статья',
    text='Текст второй статьи...',
    author=author2
)
post3 = Post.objects.create(
    positions='НВ',
    title='Новость дня',
    text='Текст новости...',
    author=author1
)

# 5. Присвоить им категории
post1.category.add(cat1, cat2)  # статья с 2 категориями
post2.category.add(cat3)
post3.category.add(cat1, cat4)  # новость с 2 категориями

# 6. Создать 4 комментария
from news.models import Comment
comment1 = Comment.objects.create(
    text='Отличная статья!',
    post=post1,
    user=user2
)
comment2 = Comment.objects.create(
    text='Интересная точка зрения',
    post=post1,
    user=user1
)
comment3 = Comment.objects.create(
    text='Спасибо за новость',
    post=post3,
    user=user2
)
comment4 = Comment.objects.create(
    text='Не согласен с автором',
    post=post2,
    user=user1
)

# 7. Корректировка рейтингов
# Лайки/дислайки для статей/новостей
post1.like()  # +1
post1.like()  # +1
post2.dislike()  # -1
post3.like()  # +1
post3.like()  # +1
post3.like()  # +1

# Лайки/дислайки для комментариев
comment1.like()  # +1
comment1.like()  # +1
comment2.dislike()  # -1
comment3.like()  # +1
comment4.dislike()  # -1
comment4.dislike()  # -1

# 8. Обновить рейтинги пользователей
author1.update_rating()
author2.update_rating()

# 9. Вывести username и рейтинг лучшего пользователя
best_author = Author.objects.all().order_by('-rating').first()
print(f"Лучший автор: {best_author.user.username}, рейтинг: {best_author.rating}")

# 10. Вывести лучшую статью
best_post = Post.objects.filter(positions='СТ').order_by('-rating').first()
print(f"Дата: {best_post.datetime}")
print(f"Автор: {best_post.author.user.username}")
print(f"Рейтинг: {best_post.rating}")
print(f"Заголовок: {best_post.title}")
print(f"Превью: {best_post.preview()}")

# 11. Вывести все комментарии к лучшей статье
comments = Comment.objects.filter(post=best_post)
for comment in comments:
    print(f"Дата: {comment.datetime}")
    print(f"Пользователь: {comment.user.username}")
    print(f"Рейтинг: {comment.rating}")
    print(f"Текст: {comment.text}")
    print("---")